        <com.example.harbon.test.WindViewTwo
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3300ff00"
            android:id="@+id/surfaceView"
            />
    </FrameLayout>
</RelativeLayout>
